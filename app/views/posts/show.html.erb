<div id="post_show_content" class="skinny_wrapper wrapper_padding">
    <header>
      <p class="date"><%= @post.created_at.strftime("%A, %B, %d") %></p>    
      <h1><%= @post.title %></h1>
      <hr>
    </header>
    <div id="content">
      <%= @post.content %>
    </div>
    <hr>
    <div id="share_box">
      <p>Share titulo</p>
      <i class="fa fa-twitter"></i>
      <i class="fa fa-facebook"></i>
      <i class="fa fa-google-plus"></i>
    </div>
    <hr>
  </div>
